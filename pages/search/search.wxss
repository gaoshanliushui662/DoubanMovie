@import "../movie/movie.wxss";
.content {
    display: flex;
    flex-direction: column;
    min-height: 0;
}

.search {
    display: flex;
    padding: 5px;
    font-size: 14px;
    background-color: #ccc;
}

.search button {
    width: 30%;
    height: 40px;
    line-height: 40px;
    margin-left: 5px;
}

.input {
    width: 70%;
    height: 38px;
    border: 1px solid #ccc;
    background-color: #fff;
    color: #000;
    line-height: 38px;
    border-radius: 5px;
    box-shadow: inset 0 0 10px #ccc;
}

.inputShow {
    color: #000;
    background-color: #ccc;
    border: 1px solid #ccc;
    padding: 5px;
    font-size: 12px;
    box-shadow: 0px 2px 5px #ccc;
}